                  <div class="pd_summary">
                    <p class=" mb-0">{{product.metafields.engo_summary.summary_content}}</p>
                  </div>
                  {% else %}
                  <div class="pd_summary">
                    <p class=" mb-0 ">{{product.description| strip_html | truncatewords: 50}}</p>
                  </div>
