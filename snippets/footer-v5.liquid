{% if section.settings.select_fts == "footer_v5" %}
{% if template contains 'index' %}
<footer class="footer_v5" style="background-color : {{section.settings.ft_home_bg_footer}}">
  <div class="container container-v1">    
    <div class="row">
      <div class="col-lg-4 menu_ft">
        <h3 class="title_menu">{{settings.title_menu_fv5}}</h3>
        <div class="row">
          <div class="col-sm-6 ">
            <div class="menu_footer">

              <ul class="list-unstyled mb-0">
                {% for link in linklists[settings.menu_fv5_1].links %}
                <li class=" mr-0"><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                {% endfor %}
              </ul>        
            </div>

          </div>
          <div class="col-sm-6">
            <div class="menu_footer">
              <ul class=" list-unstyled mb-0">
                {% for link in linklists[settings.menu_fv5_2].links %}
                <li class=" mr-0"><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                {% endfor %}
              </ul>        
            </div>

          </div>
        </div>
        <div class="list-icon ">
          <ul class="list-inline list-unstyled mb-0">
            {% if settings.icon_sc_fv5_1 !=blank %}
            <li class="list-inline-item mr-0">
              <a href="{{settings.url_sc_fv5_1}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv5_1}}"></i></a>
            </li>
            {% endif %}
            {% if settings.icon_sc_fv5_2 !=blank %}
            <li class="list-inline-item mr-0">
              <a href="{{settings.url_sc_fv5_2}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv5_2}}"></i></a>
            </li>
            {% endif %}
            {% if settings.icon_sc_fv5_3 !=blank %}
            <li class="list-inline-item mr-0">
              <a href="{{settings.url_sc_fv5_3}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv5_3}}"></i></a>
            </li>
            {% endif %}
            {% if settings.icon_sc_fv5_4 !=blank %}
            <li class="list-inline-item mr-0">
              <a href="{{settings.url_sc_fv5_4}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv5_4}}"></i></a>
            </li>
            {% endif %}         

          </ul>
        </div>
      </div>
      <div class="col-lg-4 d-none d-lg-flex align-items-center justify-content-center text-center" style="z-index:1;">
        <div class="logo-footer">
          {% if settings.logo_svg5 !=blank %}
          <div class="logosvg" style="max-width:{{settings.fv5_main_logo_maxwidth}}px;">
            <a class="d-block" href="{{shop.url}}">{{settings.logo_svg5}}</a>
          </div>          
          {% else %}            
          <a href="{{shop.url}}" class="logo">
            {% if settings.fv5_main_logo != blank %}
            <img src="{{settings.fv5_main_logo | img_url:'master'}}"  width="{{settings.fv5_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
            {% else %}
            <img src="//via.placeholder.com/45x45" width="{{settings.fv5_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
            {% endif %}
          </a>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-4  form-footer">
        <h3 class="title_menu">{{settings.title_menu2_fv5}}</h3>
        <h4 class="sub_title">{{settings.sub_title}}</h4>
        <p class="mb-0 content-footer ">{{settings.content_fv5}}</p>
        {% if settings.newsletter_form_action != blank %}
        {% assign form_action = settings.newsletter_form_action %}
        {% else %}
        {% assign form_action = '#' %}
        {% endif %}          
        <form class="needs-validation fv5-form form-inline" action="{{form_action}}" method="post">
          <div class="form-group mb-0">                           
            <input type="email" name="EMAIL" class="form-control text-input" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}">                 
          </div>
          <button class="btn" type="submit">{{ 'general.newsletter_form.submit_footer' | t }}</button>
        </form>   
        <div class="payment text-lg-right">
          {% if settings.fv5_bottom_payment_img != blank %}
          <img src="{{settings.fv5_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//via.placeholder.com/247x23"  alt="">
          {% endif %}
        </div>
        <div class="text-lg-right">
          {% if settings.fv5_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv5_bottom_copyright}}</p>
          {% else %}
          <div class="text-copyright mb-0"><p>© Copyright 2021 | <a href="http://themecean.net/" rel="nofollow" target="_blank" class="underline_hover bold">  LeaticStore </a> By <a href="http://themecean.net/" rel="nofollow" target="_blank" class="underline_hover link"> ThemeOcean.</a><a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a></p> 
          </div> 
          {% endif %}
        </div> 
      </div>
    </div>
  </div>
</footer>
<style>
  .footer_v5 .title_menu{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .form-footer .title_menu{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .form-footer .title_menu:after{
    background-color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .title_menu:after{
    background-color :  {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .form-footer .sub_title{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .form-footer .content-footer{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .form-footer .text-copyright{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .menu_footer ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .list-icon ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v5 .logo-footer .logosvg{
    background : {{section.settings.ft_home_bg_footer}};
  }
</style>
{% endif %}
{% endif %}

