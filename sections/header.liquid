      },
      {
        "type": "textarea",
        "id": "hd_icon_search_svg",
        "label": "Icon search SVG"
      },
      {
        "type": "header",
        "content": "Icon Wishlist"
      },
      {
        "type": "text",
        "id": "hd_icon_wishlist",
        "label": "Icon Wishlist",
        "info": "[Get icon from here](https:\/\/fontawesome.com\/v4.7.0\/icons\/)",
        "default": "icon-heart"
      },
      {
        "type": "textarea",
        "id": "hd_icon_wishlist_svg",
        "label": "Icon wishlist SVG"
      },
      {
        "type": "url",
        "id": "url_wishlist",
        "label": "Url Wishlist"
      },
      {
