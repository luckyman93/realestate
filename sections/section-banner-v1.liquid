<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 {% if section.settings.ena_padding_top %} padding_top_banner1 {% endif %}">
    <div class="row no-gutters align-items-center"  style="background-color:{{section.settings.bg_banner}}"> 
      <div class=" col-banner-6 {% if section.settings.select_pos =='left' %} order-lg-1 {% elsif section.settings.select_pos == 'right'%} order-lg-2{% endif %}">
        <div class="box-img1 img-left" style="background-color:{{section.settings.bg_banner}}">
          <div class="banner-content">
            {% if section.settings.title_banner != blank %}
            <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
            {% endif %}
            {% if section.settings.sub_title_banner != blank %}
            <p class="sub-title" style="color: {{section.settings.color_sub_title}}">{{section.settings.sub_title_banner}}</p>
            {% endif %}

            <div>
              {% if section.settings.button_banner != blank %}
              <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
              {% endif %}
            </div>
            <div class="btn_bottom">
              {% if section.settings.button_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}" class="button-shop button-shop2-{{ section.id }}" title="">{{section.settings.button_banner2}}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      <div class="col-banner-4 {% if section.settings.select_pos =='left' %} order-lg-2  {% elsif section.settings.select_pos == 'right'%} order-lg-1 {% endif %}">
        <div class="box-img img-right">
          {% if section.settings.img_banner_right != blank %}
          <img data-src="{{section.settings.img_banner_right | img_url : 'master'}}" class="lazyload img-fluid w-100" alt >
          {% else %}
          <img data-src="//via.placeholder.com/960x850" class="lazyload img-fluid w-100" alt>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v1 .col-banner-6  .img-left .banner-content .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
    border: 1px solid  {{section.settings.color_btn}};
    background: transparent;
  }
  .section-banner-v1 .col-banner-6  .img-left .banner-content .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
    border: 1px solid  {{section.settings.bg_btn_hover}};
  }
  .section-banner-v1 .col-banner-6  .img-left .banner-content .button-shop2-{{ section.id }} {
    color: {{section.settings.color_btn2}};
    border: 1px solid  {{section.settings.color_btn2}};
    background: transparent;
  }
  .section-banner-v1 .col-banner-6  .img-left .banner-content .button-shop2-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover2}};
    background: {{section.settings.bg_btn_hover2}};
    border: 1px solid  {{section.settings.bg_btn_hover2}};
  }
</style>
