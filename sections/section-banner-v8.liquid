<div data-section-id="{{ section.id }}" data-section-type="section-banner-v8" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v8">
    <div class="">
      <div class="row no-gutters">        
        <div class="col-lg-3 col-md-6">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner1}}" class="img-banner">
                <img data-src=" {% if section.settings.img_banner1 != blank %}{{section.settings.img_banner1 | img_url:'master'}} {% else %}//via.placeholder.com/640x450 {% endif %}" class="lazyload w-100 img-fluid" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title title-{{ section.id }}">{{section.settings.title_1}}</h3>
              {% endif %}            
              {% if section.settings.btn_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}" class="btn-banner-{{ section.id }}">
                {{section.settings.btn_banner1}}
              </a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 ">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner2}}" class="img-banner">
