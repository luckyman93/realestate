                {{section.settings.btn_banner2}}
              </a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner3}}" class="img-banner">
                <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner3 | img_url:'master'}} {% else %} //via.placeholder.com/640x450 {% endif %}" class="lazyload img-fluid w-100" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              {% if section.settings.title_3 != blank %}
              <h3 class="title title-{{ section.id }}">{{section.settings.title_3}}</h3>
              {% endif %}       
              {% if section.settings.btn_banner3 != blank %}
