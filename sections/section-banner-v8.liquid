                {{section.settings.btn_banner3}}
              </a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner4}}" class="img-banner">
                <img data-src="{% if section.settings.img_banner4 != blank %} {{section.settings.img_banner4 | img_url:'master'}} {% else %} //via.placeholder.com/640x450 {% endif %}" class="lazyload img-fluid w-100" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              {% if section.settings.title_4 != blank %}
              <h3 class="title title-{{ section.id }}">{{section.settings.title_4}}</h3>
              {% endif %}       
              {% if section.settings.btn_banner4 != blank %}
              <a href="{{section.settings.url_banner4}}" class="btn-banner-{{ section.id }}">
                {{section.settings.btn_banner4}}
              </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-banner-v8 .box-banner .info-banner .title-{{ section.id }} {
    color: {{section.settings.color_title}};
  }
  .section-banner-v8 .box-banner .info-banner .btn-banner-{{ section.id }} {
    color: {{section.settings.color_btn_banner}};
    transition: all .3s;
  }
  .section-banner-v8 .box-banner .info-banner .btn-banner-{{ section.id }}:after {
    background: {{section.settings.color_btn_banner}};
  }
  .section-banner-v8 .box-banner .info-banner .btn-banner-{{ section.id }}:hover {
    color: {{section.settings.hover_color_btn_banner}};
  }
  .section-banner-v8 .box-banner .info-banner .btn-banner-{{ section.id }}:hover:after {
    background: {{section.settings.hover_color_btn_banner}};
  }

</style>

