<div data-section-id="{{ section.id }}" data-section-type="section-product-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v5 mt-all">
    <div class="container container-v2">
      <div class="row align-items-center info-prv7">

        <div class="col-lg-3">          
          <div class="row listproduct">   
            {% assign products_limit = section.settings.products_limit %}
            {% assign col = section.settings.select_collection %}
            {% for product in collections[col].products limit: products_limit %}
            <div class="col-lg-12  col-6 product_item">
              {% include 'product-item-v1' %}
            </div>
            {% else %}
            {% for i in (1..section.settings.products_limit) %}
            <div class="col-lg-12 col-6 product_item">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>

        <div class="col-lg-6">
          <div class="box-info-center mb-3">
            <div class="box-img mt-3 text-center mt-sm-0">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"> <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
              <a href="{{section.settings.url_banner1}}"> <img src="//via.placeholder.com/690x950" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            <div class="info-bottom text-center mt-3"> 
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_banner1}}" class="button-banner button-banner-{{ section.id }}" style="color :{{section.settings.color_btn}}; background-color:{{section.settings.bgcolor_btn}}">{{section.settings.button_1}}</a>
              {% endif %}
            </div> 
          </div>
        </div>

        <div class="col-lg-3">
          <div class="row listproduct">   
            {% assign products_limit2 = section.settings.products_limit2 %}
            {% assign col = section.settings.select_collection2 %}
            {% for product in collections[col].products limit: products_limit2 %}
            <div class="col-lg-12  col-6 product_item">
              {% include 'product-item-v1' %}
            </div>
            {% else %}
            {% for i in (1..section.settings.products_limit2) %}
            <div class="col-lg-12 col-6 product_item">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
<style>
  .section-product-v5 .box-info-center .info-bottom .button-banner-{{ section.id }}:hover {
    color : {{section.settings.color_hover_button}} !important;
    background : {{section.settings.bg_hovercolor_buton}} !important;
  }
</style>

