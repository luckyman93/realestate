<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v6{% if section.settings.ena_margin_top %}  mt-all {% endif %}"> 
    <div class=" {% if section.settings.ena_container %}container container-v2{% endif %} ">

      <div class="relative banner-v6" style="background-image: url({% if section.settings.img_banner != blank %}{{section.settings.img_banner | img_url: 'master'}} {% else %} //via.placeholder.com/1920x600 {% endif %})">   
        <div class="content-banner">

          {% if section.settings.content_banner != blank %}
          <p class="content" style="color: {{section.settings.color_content_banner}}">{{section.settings.content_banner}}</p>
          {% endif %}

          {% if section.settings.title_banner != blank %}
          <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
          {% endif %}

          {% if section.settings.button_banner != blank %}
          <a href="{{section.settings.url_button}}" class="button-banner button-banner-{{ section.id }}">{{section.settings.button_banner}}</a>
          {% endif %}

        </div>
      </div>

    </div> 
  </div>
</div>

<style>
  .section-banner-v6 .banner-v6 .content-banner .button-banner-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: {{section.settings.bg_btn}};
    transition: all .3s;
  }
  .section-banner-v6 .banner-v6 .content-banner  .button-banner-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
  }
</style>

