<div class="aboutus-pages">
  {% if section.settings.enable_teams %}
  <div class="teams">
    <div class="container container-v4">
      <div class="text-center title_general">
        {% if section.settings.title_teams != blank %}
        <h3>
          {{section.settings.title_teams}}
        </h3>
        {% endif %}
        {% if section.settings.description_teams != blank %}
        <p>{{section.settings.description_teams}}</p>
        {% endif %}
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="slick_teams">
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            {% if block.type == "teams" %}
            <div class="box_teams text-center">
              <div class="img_teams">

                <a href="{{block.settings.link_people_face}}" title="">
                  {% if block.settings.people_teams_image != blank %}
                  <img data-src="{{block.settings.people_teams_image|img_url:'master'}}" class="lazyload w-100 img-fluid" alt="banner">
                  {% else %}
                  <img data-src="//via.placeholder.com/300x370" alt="" class="lazyload w-100 img-fluid">
                  {%  endif %}
                </a>
                <ul class="social-link">
                  <li><a href="{% if block.settings.link_people_face != blank %}{{block.settings.link_people_face}}{% else %}#{% endif %}" tabindex="-1"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                  <li><a href="{% if block.settings.link_people_twitter != blank %}{{block.settings.link_people_twitter}}{% else %}#{% endif %}" tabindex="-1"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                  <li><a href="{% if block.settings.link_people_instagram != blank %}{{block.settings.link_people_instagram}}{% else %}#{% endif %}" tabindex="-1"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                  <li><a href="{% if block.settings.link_people_pinterest != blank %}{{block.settings.link_people_pinterest}}{% else %}#{% endif %}" tabindex="-1"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                </ul>
              </div>
              <div class="info_teams">
                <h4>
                  {% if block.settings.block_people_teams != blank %}
                  <a href="{{block.settings.link_people_face}}" title="">{{block.settings.block_people_teams}}</a>
                  {% endif %}
                </h4>
                {% if block.settings.block_position_teams != blank %}
                <p class="mb-0">{{block.settings.block_position_teams}}</p>
                {% endif %}
              </div>
            </div>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</div>

<script>
  jQuery(document).ready(function($) {

    $('.slick_teams').slick({
      dots: false,
      arrows:false,
      infinite: true,
      speed: 300,
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000,
      {% if settings.enable_rtl_mode %}rtl: true,{% endif %}
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2,
            infinite: true,
            dots: false,
            arrows:false
          }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: false,
            arrows:false
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: false,
            arrows:false
          }
        }
      ]
    });
  })
</script>
{% schema %}
{
  "name": "Our Team",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_teams",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "title_teams",
      "label": "Title Teams",
      "default": "Meet Our Teams"
    },
    {
      "type": "textarea",
      "id": "description_teams",
      "label": "Description Teams"
    }
  ],
  "blocks": [
    {
      "type": "teams",
      "name": "People In Teams",
      "settings": [
        {
          "type": "image_picker",
          "id": "people_teams_image",
          "label": "Image People Teams",
          "info": "300 x 370 px recommended"
        },
        {
          "type": "text",
          "id": "block_people_teams",
          "label": "People Teams",
          "default": "Karen Ryan"
        },
        {
          "type": "text",
          "id": "block_position_teams",
          "label": "Position Teams",
          "default": "Ceo"
        },
        {
          "type": "url",
          "id": "link_people_face",
          "label": "URL Facebook"
        },
        {
          "type": "url",
          "id": "link_people_twitter",
          "label": "URL Twitter"
        },
        {
          "type": "url",
          "id": "link_people_instagram",
          "label": "URL Instagram"
        },
        {
          "type": "url",
          "id": "link_people_pinterest",
          "label": "URL Pinterest"
        }
      ]
    }
  ]
}
{% endschema %}

